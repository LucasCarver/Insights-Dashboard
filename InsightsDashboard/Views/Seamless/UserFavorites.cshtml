@using System.Security.Claims;
@model List<UserStartup>
@{
    ViewData["Title"] = "User Favorites";
}
<p style="text-align:center;">
    <h1><a href="/Identity/Account/Manage">@User.Identity.Name</a>'s Favorites</h1>
</p>
<div>
<p align="right">
    <a class="btn btn-success" href="/Seamless/AddUserDefinedStartup">Create A New StartUp Entry</a>
</p>
</div>


@if (Model.Count == 0)
{
    <br />
    <p class="text-danger"><b>You Haven't Got Anything On Your List Yet!</b></p>
    <p>Begin By <a href="/Seamless/DisplaySeamlessStartups">Viewing/Adding A Seamless Company StartUp</a> to your list or <a href="/Seamless/AddUserDefinedStartUp">Adding Your Own Custom StartUp</a> to your list.</p>
}
else
{
    List<string> names = new List<string>();
    <table class="table table-striped">
        <tr style="font-weight:bold;" class="text-center border-bottom">
            <th style="text-align:center;">NAME</th>
            <th style="text-align:center;" colspan="2">SUMMARY</th>
            <th style="text-align:center;">DATE ADDED</th>
            <th colspan="4"></th>
        </tr>
        @foreach (var startUp in Model)
        {
            @if (!names.Contains(startUp.CompanyName))
            {<h1><a href="/Seamless/StartupDetails?id=@startUp.Id">@startUp.CompanyName</a></h1>
            <p>@startUp.DateAdded</p>
            <p>@startUp.Scout</p>
            <p>@startUp.TwoLineSummary</p>
            <p><a href="/Seamless/ConfirmRemoveUserStartUp?id=@startUp.Id">Remove From Favorites</a></p>
            }
            if (startUp.Identifier == null)
            {
                <p><a href="/Seamless/UpdateUserStartUp?id=@startUp.Id">Update</a></p>
            }
            else
            {
                <tr>
                    <td style="text-align:center;"><a href="/Seamless/StartupDetails?id=@startUp.Id">@startUp.CompanyName.ToUpper()</a><p><small>Click For Details</small></p>
                    </td>
                    <td style="text-align:center;" colspan="2">@startUp.TwoLineSummary</td>
                    <td style="text-align:center;">@startUp.DateAdded.ToShortDateString()</td>
                    <td align="right">
                        <p><a class="btn btn-danger" href="/Seamless/ConfirmRemoveUserStartUp?id=@startUp.Id">Remove From List</a></p>
                        @if (startUp.Identifier == null)
                        {
                            <a class="btn btn-info" href="/Seamless/UpdateUserStartUp?id=@startUp.Id">Update Startup Details</a>
                        }
                        else
                        {
                            <a class="btn btn-secondary" href="/Seamless/UpdateUserStartUp?id=@startUp.Id">Can't Touch These!</a>
                        }
                    </td>
                </tr>
            }
        }
    </table>
}
